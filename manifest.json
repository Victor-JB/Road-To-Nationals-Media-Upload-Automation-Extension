{
  "manifest_version": 3,
  "name": "GymACT Road2Nationals Uploader",
  "version": "1.0",
  "description": "Automatically uploads competition videos to YouTube and Road2Nationals [not affiliated].",
  "permissions": ["identity", "storage", "tabs"],
  "host_permissions": [
    "https://www.googleapis.com/auth/drive.readonly",
    "https://www.googleapis.com/auth/youtube.upload"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Road2Nationals Uploader",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
