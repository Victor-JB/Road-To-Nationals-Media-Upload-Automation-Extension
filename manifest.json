{
  "manifest_version": 3,
  "name": "GymACT Road2Nationals Content Uploader",
  "version": "1.8.0",
  "description": "Automatically uploads competition videos to YouTube and Road2Nationals [not affiliated].",
  "permissions": [
    "identity", 
    "storage",
    "activeTab", 
    "scripting"
  ],
  "host_permissions": [
    "https://*.roadtonationals.com/*",
    "https://www.googleapis.com/auth/drive.readonly",
    "https://www.googleapis.com/auth/youtube.force-ssl"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Road2Nationals Content Uploader",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}